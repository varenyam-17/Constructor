#include<iostream>
using namespace std;
class detail
{
    int id;
    string name, des;

    public:
    detail();
    int disp();
    
    
};
detail::detail()
{
   
    
    cout<<"Enter Employee Name"<<endl;
    cin>>name;
    cout<<"Enter ID"<<endl;
    cin>>id;
    cout<<"Enter Designation"<<endl;
    cin>>des;
    }
int detail::disp()
{
    cout<<"Name: "<<name<<endl;
    cout<<"ID: "<<id<<endl;
    cout<<"Designation: "<<des<<endl;
    return 0;
}
int main()
{
    detail e1;
    e1.disp();
}
